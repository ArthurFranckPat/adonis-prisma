{
  "name": "@arthurfranckpat/adonis-prisma",
  "main": "./build/index.js",
  "description": "A Prisma Adapter for Adonis Js v6",
  "version": "0.0.6",
  "engines": {
    "node": ">=20.6.0"
  },
  "type": "module",
  "files": [
    "build/src",
    "build/providers",
    "build/commands",
    "build/stubs",
    "build/index.d.ts",
    "build/index.js",
    "build/configure.d.ts",
    "build/configure.js"
  ],

  "exports": {
    ".": "./build/index.js",
    "./types": "./build/src/types.js",
    "./commands": "./build/commands/main.js",
    "./prisma_provider": "./build/providers/prisma_provider.js",
    "./prisma_service": "./build/src/prisma_service.js",
    "./prisma_user_provider": "./build/src/prisma_user_provider.js",
    "./prisma_seeder": "./build/src/prisma_seeder.js"
  },
  "scripts": {
    "clean": "del-cli build",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "quick:test": "node --import=./tsnode.esm.js --enable-source-maps bin/test.ts",
    "pretest": "npm run lint",
    "test": "c8 npm run quick:test",
    "compile": "npm run lint && npm run clean && tsc",
    "postcompile": "npm run copy:templates && npm run index:commands",
    "build": "npm run compile",
    "release": "np",
    "version": "npm run build",
    "prepublishOnly": "npm run build",
    "index:commands": "adonis-kit index build/commands"
  },
  "keywords": [],
  "author": "ArthurFranckPat",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArthurFranckPat/adonis-prisma.git"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.2.3",
    "@adonisjs/auth": "^9.2.0",
    "@adonisjs/core": "^6.3.1",
    "@adonisjs/eslint-config": "^1.3.0",
    "@adonisjs/prettier-config": "^1.3.0",
    "@adonisjs/session": "^7.4.0",
    "@adonisjs/tsconfig": "^1.3.0",
    "@japa/assert": "^2.1.0",
    "@japa/file-system": "^2.3.0",
    "@japa/runner": "^3.1.1",
    "@poppinss/utils": "^6.7.3",
    "@prisma/adapter-pg": "^5.14.0",
    "@prisma/client": "^5.14.0",
    "@swc/core": "^1.4.6",
    "@types/node": "^20.11.25",
    "c8": "^9.1.0",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.1.0",
    "eslint": "^8.57.0",
    "execa": "^9.1.0",
    "np": "^10.0.0",
    "prettier": "^3.2.5",
    "prisma": "^5.14.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  },
  "peerDependencies": {
    "@adonisjs/auth": "^9.2.0",
    "@adonisjs/core": "^6.2.0"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "np": {
    "message": "chore(release): %s",
    "tag": "latest",
    "branch": "main",
    "anyBranch": false
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package"
  },
  "prettier": "@adonisjs/prettier-config",
  "outDir": "./build",
  "clean": true,
  "format": "esm",
  "dts": false,
  "sourcemap": true,
  "target": "esnext"
}
